[Unit]
Description=UChroma RGB Control Daemon
Documentation=https://github.com/hyperbliss/uchroma
After=graphical-session.target

[Service]
Type=dbus
BusName=io.uchroma
ExecStart=%h/.local/bin/uchromad
Restart=on-failure
RestartSec=5

# Hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=%h/.config/uchroma
# Disable user namespace sandboxing (triggers AppArmor userns restrictions on Ubuntu 24.04+)
PrivateUsers=false

[Install]
WantedBy=default.target
